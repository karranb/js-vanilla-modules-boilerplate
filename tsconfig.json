{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "lib": [
      "es6",
      "DOM"
    ],
    "module": "es6",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "_utils": ["./src/utils/"]
    },
  },
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "dist",
    "node_modules",
    "webpack.config.js",
  ]
}